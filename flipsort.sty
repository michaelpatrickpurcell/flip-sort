\tikzset{pics/cardfrontprintable/.style n args={8}{%
	code={
	\begin{scope}
	\clip (-\cardwidth/2 - \bleed, 0in) --%
	      (-\cardwidth/2 - \bleed, \cardheight/2 + \bleed) --%
	      (\cardwidth/2 + \bleed, \cardheight/2 + \bleed) --%
	      (\cardwidth/2 + \bleed, -\cardheight/2 - \bleed) --%
	      (-\cardwidth/2 - \bleed, -\cardheight/2 - \bleed) --%
	      cycle;
	% Pattern for card front
	\pic () at (0,0) {cardfrontpattern2={#1}{#2}{#3}{#4}{#5}{#6}{#7}};
	% Cutting guides for corners of the cards	
	\pic () at (0,0) {cutguide={#8}};
%	\node[draw, minimum width=\cardwidth, minimum height=\cardheight] at (0,0) {};
\end{scope}
}}}

\tikzset{pics/cardbackprintable/.style n args={8}{%
